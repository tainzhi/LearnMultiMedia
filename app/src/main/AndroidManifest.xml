<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.tainzhi.sample.media">

	<uses-permission android:name="android.permission.RECORD_AUDIO" />
	<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"
		android:maxSdkVersion="29" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />
	<uses-permission android:name="android.permission.CAMERA" />

	<uses-feature
		android:glEsVersion="0x00020000"
		android:required="true" />
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />

	<application
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:theme="@style/AppTheme"
		android:supportsRtl="true">
		<activity
			android:name=".camera.SettingsActivity"
			android:exported="false"
			android:label="@string/title_activity_settings" />
		<activity android:name=".LargeImageActivity" />
		<activity
			android:name=".player.PlayActivity"
			android:theme="@android:style/Theme.Holo.NoActionBar.Fullscreen" />
		<activity
			android:name=".camera.CameraActivity"
			android:theme="@style/AppTheme.FullScreen" />
		<activity android:name=".native_codec.NativeCodecActivity" />
		<activity android:name=".opengl2.camera.TakePictureActivity" />
		<activity android:name=".opengl2.camera.preview.PreviewCameraActivity" />
		<activity
			android:name=".opengl2.ImageGLRendererActivity"
			android:exported="true">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />

				<category android:name="android.intent.category.DEFAULT" />

				<data
					android:host="*"
					android:mimeType="image/*"
					android:scheme="file" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />

				<category android:name="android.intent.category.DEFAULT" />

				<data
					android:host="*"
					android:mimeType="image/*"
					android:scheme="content" />
			</intent-filter>
		</activity>
		<activity android:name=".opengl2.RotateTriangleActivity" />
		<activity android:name=".opengl2.PaintPointActivity" />
		<activity android:name=".opengl2.BallActivity" />
		<activity android:name=".opengl2.CylinderActivity" />
		<activity android:name=".opengl2.ConeActivity" />
		<activity
			android:name=".opengl2.OvalActivity"
			android:label="@string/title_activity_oval"
			android:theme="@style/AppTheme.NoActionBar" />
		<activity android:name=".opengl2.SquareActivity" />
		<activity android:name=".opengl2.TriangleActivity" />
		<activity
			android:name=".AudioRecordPlayActivity"
			android:label="@string/title_activity_audio_record_play"
			android:theme="@style/AppTheme.NoActionBar" />
		<activity
			android:name=".MainActivity"
			android:exported="true"
			android:label="@string/app_name"
			android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>

</manifest>
