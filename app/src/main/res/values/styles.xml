<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">always</item>
    </style>

    <style name="ControlBarItem">
        <item name="android:layout_width">@dimen/control_bar_width</item>
        <item name="android:layout_height">@dimen/control_bar_width</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:background">@drawable/btn_overlay_medium_container</item>
        <item name="android:backgroundTint">@color/colorOverlaySurface</item>
        <item name="android:tint">@color/bc_control_bar_item</item>
        <item name="android:tintMode">src_atop</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
